<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="action_vehicle_request_my" model="ir.actions.act_window">
        <field name="name">My Requests</field>
        <field name="res_model">vehicle.request</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[("requester_id", "=", uid)]</field>
    </record>

    <record id="action_vehicle_request_all" model="ir.actions.act_window">
        <field name="name">Vehicle Requests</field>
        <field name="res_model">vehicle.request</field>
        <field name="view_mode">list,form</field>
    </record>

    <record id="action_vehicle_request_to_approve" model="ir.actions.act_window">
        <field name="name">Requests To Approve</field>
        <field name="res_model">vehicle.request</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[("state", "=", "draft")]</field>
    </record>

    <menuitem
        id="menu_vehicle_request_my"
        name="My Requests"
        parent="menu_caritas_fleet_root"
        sequence="30"
        action="action_vehicle_request_my"
    />

    <menuitem
        id="menu_vehicle_request_all"
        name="Vehicle Requests"
        parent="menu_caritas_fleet_root"
        sequence="25"
        action="action_vehicle_request_all"
        groups="caritas_fleet_request.group_fleet_admin,caritas_fleet_request.group_fleet_driver"
    />

    <menuitem
        id="menu_vehicle_request_to_approve"
        name="Requests To Approve"
        parent="menu_caritas_fleet_root"
        sequence="27"
        action="action_vehicle_request_to_approve"
        groups="caritas_fleet_request.group_fleet_admin"
    />

</odoo>