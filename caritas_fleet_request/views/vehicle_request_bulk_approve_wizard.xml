<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="view_vehicle_request_bulk_approve_wizard" model="ir.ui.view">
        <field name="name">vehicle.request.bulk.approve.wizard.form</field>
        <field name="model">vehicle.request.bulk.approve.wizard</field>
        <field name="arch" type="xml">
            <form string="Bulk Approve Requests" create="false" edit="false">
                <group>
                    <field name="request_ids" readonly="1" widget="many2many_tags"/>
                </group>
                <footer>
                    <button name="action_bulk_approve" type="object" string="Approve Requests" class="btn-primary"/>
                    <button string="Cancel" special="cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_vehicle_request_bulk_approve_wizard" model="ir.actions.act_window">
        <field name="name">Bulk Approve</field>
        <field name="res_model">vehicle.request.bulk.approve.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_vehicle_request_bulk_approve_wizard"/>
        <field name="target">new</field>
        <field name="binding_model_id" ref="caritas_fleet_request.model_vehicle_request"/>
        <field name="binding_view_types">list</field>
        <field name="groups_id" eval="[(6, 0, [ref('caritas_fleet_request.group_fleet_admin')])]"/>
    </record>

</odoo>