<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="view_vehicle_trip_calendar" model="ir.ui.view">
        <field name="name">vehicle.trip.calendar</field>
        <field name="model">vehicle.trip</field>
        <field name="arch" type="xml">
            <calendar string="Fleet Calendar" date_start="date_start" date_stop="date_end" color="vehicle_id">
                <field name="calendar_display_name"/>
                <field name="vehicle_id"/>
                <field name="driver_id"/>
                <field name="request_state" widget="badge"/>
            </calendar>
        </field>
    </record>

    <record id="view_vehicle_trip_tree" model="ir.ui.view">
        <field name="name">vehicle.trip.tree</field>
        <field name="model">vehicle.trip</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="request_id"/>
                <field name="requester_id"/>
                <field name="department_id"/>
                <field name="vehicle_id"/>
                <field name="driver_id"/>
                <field name="date_start"/>
                <field name="date_end"/>
            </list>
        </field>
    </record>

    <record id="view_vehicle_trip_form" model="ir.ui.view">
        <field name="name">vehicle.trip.form</field>
        <field name="model">vehicle.trip</field>
        <field name="arch" type="xml">
            <form string="Vehicle Trip">
                <sheet>
                    <group>
                        <group>
                            <field name="name" readonly="1"/>
                            <field name="request_id" readonly="1"/>
                            <field name="requester_id"/>
                            <field name="department_id"/>
                        </group>
                        <group>
                            <field name="vehicle_id"/>
                            <field name="driver_id"/>
                            <field name="date_start"/>
                            <field name="date_end"/>
                        </group>
                    </group>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <record id="view_vehicle_trip_kanban" model="ir.ui.view">
        <field name="name">vehicle.trip.kanban</field>
        <field name="model">vehicle.trip</field>
        <field name="arch" type="xml">
            <kanban default_group_by="request_state" quick_create="false">
                <field name="name"/>
                <field name="vehicle_id"/>
                <field name="driver_id"/>
                <field name="date_start"/>
                <field name="date_end"/>
                <field name="request_state"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click">
                            <div class="oe_kanban_details">
                                <strong class="o_kanban_record_title">
                                    <field name="name"/>
                                </strong>
                                <div class="o_kanban_record_subtitle">
                                    <field name="vehicle_id"/>
                                </div>
                                <div>
                                    <field name="driver_id"/>
                                </div>
                                <div class="text-muted">
                                    <field name="date_start"/> - <field name="date_end"/>
                                </div>
                                <div class="mt4">
                                    <field name="request_state" widget="label_selection" options="{'classes': {'draft': 'default', 'approved': 'success', 'in_progress': 'warning', 'done': 'primary', 'closed': 'info', 'rejected': 'danger'}}"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="view_vehicle_trip_graph" model="ir.ui.view">
        <field name="name">vehicle.trip.graph</field>
        <field name="model">vehicle.trip</field>
        <field name="arch" type="xml">
            <graph string="Vehicle Trips" type="pie" sample="1">
                <field name="department_id"/>
            </graph>
        </field>
    </record>

    <record id="view_vehicle_trip_search" model="ir.ui.view">
        <field name="name">vehicle.trip.search</field>
        <field name="model">vehicle.trip</field>
        <field name="arch" type="xml">
            <search string="Search Vehicle Trips">
                <field name="name"/>
                <field name="vehicle_id"/>
                <field name="requester_id"/>
                <field name="department_id"/>
                <filter string="Current Year" name="current_year" 
                        domain="[('date_start', '&gt;=', datetime.datetime.now().strftime('%Y-01-01 00:00:00')),
                                 ('date_start', '&lt;=', datetime.datetime.now().strftime('%Y-12-31 23:59:59'))]"/>
                <group expand="0" string="Group By">
                    <filter string="Department" name="groupby_department" context="{'group_by': 'department_id'}"/>
                    <filter string="Vehicle" name="groupby_vehicle" context="{'group_by': 'vehicle_id'}"/>
                    <filter string="Requester" name="groupby_requester" context="{'group_by': 'requester_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="action_vehicle_trip_calendar" model="ir.actions.act_window">
        <field name="name">Fleet Calendar</field>
        <field name="res_model">vehicle.trip</field>
        <field name="view_mode">calendar,kanban,list,form,graph</field>
        <field name="view_id" ref="view_vehicle_trip_calendar"/>
        <field name="search_view_id" ref="view_vehicle_trip_search"/>
        <field name="view_ids" eval="[(5, 0, 0), 
            (0, 0, {'sequence': 1, 'view_mode': 'calendar', 'view_id': ref('view_vehicle_trip_calendar')}), 
            (0, 0, {'sequence': 2, 'view_mode': 'kanban', 'view_id': ref('view_vehicle_trip_kanban')}),
            (0, 0, {'sequence': 3, 'view_mode': 'list', 'view_id': ref('view_vehicle_trip_tree')}), 
            (0, 0, {'sequence': 4, 'view_mode': 'form', 'view_id': ref('view_vehicle_trip_form')}),
            (0, 0, {'sequence': 5, 'view_mode': 'graph', 'view_id': ref('view_vehicle_trip_graph')})]"/>
        <field name="context">{"search_default_groupby_vehicle_id": 1}</field>
    </record>

    <menuitem
        id="menu_vehicle_trip_calendar"
        name="Fleet Calendar"
        parent="menu_caritas_fleet_root"
        sequence="2"
        action="action_vehicle_trip_calendar"
        groups="caritas_fleet_request.group_fleet_admin,caritas_fleet_request.group_fleet_user"
    />

</odoo>