<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- Root application menu -->
    <menuitem
        id="menu_caritas_fleet_root"
        name="Caritas Fleet Management"
        sequence="10"
        web_icon="caritas_fleet_request,static/description/icon.png"
    />

    <record id="action_vehicle_department" model="ir.actions.act_window">
        <field name="name">Departments</field>
        <field name="res_model">vehicle.department</field>
        <field name="view_mode">list,form</field>
    </record>

    <record id="action_caritas_fleet_vehicles" model="ir.actions.act_window">
        <field name="name">Fleet Vehicles</field>
        <field name="res_model">fleet.vehicle</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem
        id="menu_caritas_fleet_departments_action"
        parent="menu_caritas_fleet_root"
        action="action_vehicle_department"
        sequence="10"
    />

    <menuitem
        id="menu_caritas_fleet_vehicles"
        name="Fleet Vehicles"
        parent="menu_caritas_fleet_root"
        sequence="20"
        action="action_caritas_fleet_vehicles"
        groups="caritas_fleet_request.group_fleet_admin"
    />

</odoo>