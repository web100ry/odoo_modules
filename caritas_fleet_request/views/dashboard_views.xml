<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Action: департаменти -->
    <record id="action_vehicle_trip_graph_department" model="ir.actions.act_window">
        <field name="name">Використання авто за департаментами</field>
        <field name="res_model">vehicle.trip</field>
        <field name="view_mode">graph</field>
        <field name="view_id" ref="caritas_fleet_request.view_vehicle_trip_graph_department"/>
        <field name="search_view_id" ref="caritas_fleet_request.view_vehicle_trip_search"/>
        <field name="context">{
            'search_default_current_year': 1
        }</field>
    </record>

    <!-- Action: автомобілі -->
    <record id="action_vehicle_trip_graph_vehicle" model="ir.actions.act_window">
        <field name="name">Кількість поїздок за автомобілями</field>
        <field name="res_model">vehicle.trip</field>
        <field name="view_mode">graph</field>
        <field name="view_id" ref="caritas_fleet_request.view_vehicle_trip_graph_vehicle"/>
        <field name="search_view_id" ref="caritas_fleet_request.view_vehicle_trip_search"/>
        <field name="context">{
            'search_default_current_year': 1
        }</field>
    </record>

    <!-- Dashboard -->
    <record id="view_caritas_fleet_dashboard" model="ir.ui.view">
        <field name="name">caritas.fleet.dashboard</field>
        <field name="model">board.board</field>
        <field name="arch" type="xml">
            <form string="Дашборд автопарку">
                <board style="1-1">
                    <column>
                        <action name="%(action_vehicle_trip_graph_department)d"
                                string="Використання авто за департаментами"/>
                    </column>
                    <column>
                        <action name="%(action_vehicle_trip_graph_vehicle)d"
                                string="Кількість поїздок за автомобілями"/>
                    </column>
                </board>
            </form>
        </field>
    </record>

    <!-- Відкриття дашборду -->
    <record id="action_caritas_fleet_dashboard" model="ir.actions.act_window">
        <field name="name">Дашборд</field>
        <field name="res_model">board.board</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_caritas_fleet_dashboard"/>
        <field name="usage">menu</field>
    </record>

</odoo>