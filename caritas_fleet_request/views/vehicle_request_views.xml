<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="view_vehicle_request_tree" model="ir.ui.view">
        <field name="name">vehicle.request.tree</field>
        <field name="model">vehicle.request</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="requester_id"/>
                <field name="department_id"/>
                <field name="origin_organization_id" context="{'caritas_org_format': True}"/>
                <field name="destination_organization_ids" widget="many2many_tags" context="{'caritas_org_format': True}"/>
                <field name="origin_city" readonly="1"/>
                <field name="destination_cities" readonly="1"/>
                <field name="trip_category"/>
                <field name="vehicle_id"/>
                <field name="date_start"/>
                <field name="date_end"/>
                <field name="state" widget="badge"/>
            </list>
        </field>
    </record>

    <record id="view_vehicle_request_form" model="ir.ui.view">
        <field name="name">vehicle.request.form</field>
        <field name="model">vehicle.request</field>
        <field name="arch" type="xml">
            <form string="Vehicle Request">
                <header>
                    <button name="action_approve" type="object" string="Approve"
                        class="btn-primary"
                        groups="caritas_fleet_request.group_fleet_admin"
                        invisible="state != 'draft'"/>
                    <button name="action_reject" type="object" string="Reject"
                        class="btn-secondary"
                        groups="caritas_fleet_request.group_fleet_admin"
                        invisible="state != 'draft'"/>
                    <button name="action_start" type="object" string="Start"
                        class="btn-secondary"
                        groups="caritas_fleet_request.group_fleet_driver,caritas_fleet_request.group_fleet_admin"
                        invisible="state != 'approved'"/>
                    <button name="action_done" type="object" string="Mark Completed"
                        class="btn-secondary"
                        groups="caritas_fleet_request.group_fleet_driver,caritas_fleet_request.group_fleet_admin"
                        invisible="state != 'in_progress'"/>
                    <button name="action_close" type="object" string="Close"
                        class="btn-secondary"
                        invisible="state != 'done' or requester_id != uid"/>
                    <button name="action_open_reject_wizard" type="object" string="Reject"
                        class="btn-secondary"
                        invisible="state != 'done' or requester_id != uid"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,approved,in_progress,done,closed,rejected"/>
                </header>

                <sheet>
                    <group>
                        <group>
                            <field name="name" readonly="1"/>
                            <field name="requester_id" readonly="1"/>
                            <field name="department_id"/>
                            <field name="trip_type"/>
                            <field name="trip_category"/>
                        </group>
                        <group>
                            <field name="origin_organization_id" context="{'caritas_org_format': True}"/>
                            <field name="destination_organization_ids" widget="many2many_tags" context="{'caritas_org_format': True}"/>
                            <field name="origin_city" readonly="1"/>
                            <field name="destination_cities" readonly="1"/>
                            <field name="vehicle_id" domain="['|', ('department_id', '=', False), ('department_id', '=', department_id)]"/>
                            <field name="driver_id"
                                invisible="trip_type == 'self_drive'"/>
                            <field name="date_start"/>
                            <field name="date_end"/>
                        </group>
                    </group>

                    <group>
                        <field name="trip_details" colspan="4" nolabel="0" widget="text"/>
                    </group>
                </sheet>

                <chatter/>
            </form>
        </field>
    </record>

</odoo>