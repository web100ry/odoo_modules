<odoo>
  <record id="view_hr_hospital_patient_list" model="ir.ui.view">
    <field name="name">hr.hospital.patient.list</field>
    <field name="model">hr.hospital.patient</field>
    <field name="arch" type="xml">
      <list>
        <field name="first_name"/>
        <field name="last_name"/>
        <field name="middle_name"/>
        <field name="fullname"/>
        <field name="phone"/>
        <field name="email"/>
        <field name="birth_date"/>
        <field name="age"/>
        <field name="gender"/>
        <field name="country_id"/>
        <field name="lang_id"/>
        <field name="doctor_id"/>
        <field name="disease_id"/>
      </list>
    </field>
  </record>

  <record id="view_hr_hospital_patient_form" model="ir.ui.view">
    <field name="name">hr.hospital.patient.form</field>
    <field name="model">hr.hospital.patient</field>
    <field name="arch" type="xml">
      <form>
        <sheet>
          <group>
            <group>
                <field name="last_name"
                   onchange="1"
                   context="{'trigger_field': 'last_name'}"/>
                <field name="first_name"
                   onchange="1"
                   context="{'trigger_field': 'first_name'}"/>
                <field name="middle_name"
                   onchange="1"
                   context="{'trigger_field': 'middle_name'}"/>
                <field name="fullname" readonly="1"/>
                <field name="birth_date"
                   onchange="1"
                   context="{'trigger_field': 'birth_date'}"/>
                <field name="age" readonly="1"/>
                <field name="gender"/>
            </group>
            <group>
                <field name="country_id"/>
                <field name="lang_id"/>
                <field name="phone"/>
                <field name="email"/>
                <field name="doctor_id"/>
                <field name="disease_id"/>
            </group>
          </group>
        </sheet>
      </form>
    </field>
  </record>

  <record id="action_hr_hospital_patient" model="ir.actions.act_window">
    <field name="name">Patients</field>
    <field name="type">ir.actions.act_window</field>
    <field name="res_model">hr.hospital.patient</field>
    <field name="view_mode">list,form</field>
  </record>


</odoo>
