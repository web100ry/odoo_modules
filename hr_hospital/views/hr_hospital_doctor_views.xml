<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- List View -->
    <record id="view_hr_hospital_doctor_list" model="ir.ui.view">
        <field name="name">hr.hospital.doctor.list</field>
        <field name="model">hr.hospital.doctor</field>
        <field name="arch" type="xml">
            <list string="Doctors">
                <field name="fullname"/>
                <field name="speciality_id"/>
                <field name="is_intern"/>
                <field name="mentor_id"/>
                <field name="license_number"/>
                <field name="license_date"/>
                <field name="experience_years"/>
                <field name="rating"/>
                <field name="education_country_id"/>
                <field name="phone"/>
                <field name="email"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_hr_hospital_doctor_form" model="ir.ui.view">
        <field name="name">hr.hospital.doctor.form</field>
        <field name="model">hr.hospital.doctor</field>
        <field name="arch" type="xml">
            <form string="Doctor">
                <sheet>

                    <!-- Button Box -->
                    <div class="oe_button_box" name="button_box">
                        <button name="toggle_active"
                                type="object"
                                class="oe_stat_button"
                                icon="fa-archive">
                            <field name="active"
                                   widget="boolean_button"
                                   options='{"terminology": "archive"}'/>
                        </button>

                        <button name="action_view_interns"
                                type="object"
                                class="oe_stat_button"
                                icon="fa-users"
                                invisible="is_intern or intern_count == 0">
                            <field name="intern_count"
                                   widget="statinfo"
                                   string="Interns"/>
                        </button>
                    </div>

                    <!-- Title -->
                    <div class="oe_title">
                        <h1>
                            <field name="fullname"
                                   readonly="1"
                                   placeholder="Full name"/>
                        </h1>
                    </div>

                    <!-- Main Groups -->
                    <group>
                        <group string="Personal Information">
                            <field name="last_name"/>
                            <field name="first_name"/>
                            <field name="middle_name"/>
                            <field name="birth_date"/>
                            <field name="age" readonly="1"/>
                            <field name="gender"/>
                            <field name="phone"/>
                            <field name="email"/>
                            <field name="country_id"/>
                            <field name="lang_id"/>
                        </group>

                        <group string="Professional Information">
                            <!-- Photo -->
                            <field name="image_1920"
                                   widget="image"
                                   class="oe_avatar"/>
                            <field name="speciality_id"/>
                            <field name="is_intern"/>
                            <field name="mentor_id"
                                   invisible="not is_intern"/>
                            <field name="license_number"/>
                            <field name="license_date"/>
                            <field name="experience_years"
                                   readonly="1"/>
                            <field name="rating"/>
                            <field name="education_country_id"/>
                            <field name="hospital_id"/>
                            <field name="user_id"/>
                        </group>
                    </group>

                    <!-- Notebook -->
                    <notebook>

                        <!-- Description -->
                        <page string="Description">
                            <field name="description"
                                   placeholder="Additional information about the doctor..."/>
                        </page>

                        <!-- Mentor Page (for interns) -->
                        <page string="Mentor"
                              invisible="not is_intern or not mentor_id">
                            <group>
                                <group string="Mentor Information">
                                    <field name="mentor_id"
                                           readonly="1"
                                           invisible="1"/>
                                    <label for="mentor_id"
                                           string="Mentor"/>
                                    <div>
                                        <field name="mentor_id"
                                               readonly="1"
                                               class="oe_inline"
                                               options="{'no_create': True,
                                                         'no_open': True}"/>
                                    </div>

                                    <label for="mentor_id"
                                           string="Speciality"/>
                                    <div>
                                        <field name="mentor_id"
                                               readonly="1"
                                               class="oe_inline"
                                               widget="related"
                                               options="{'field': 'speciality_id'}"/>
                                    </div>

                                    <label for="mentor_id"
                                           string="Experience"/>
                                    <div>
                                        <field name="mentor_id"
                                               readonly="1"
                                               class="oe_inline"
                                               widget="related"
                                               options="{'field': 'experience_years'}"/>
                                        years
                                    </div>
                                </group>
                            </group>
                        </page>

                        <!-- Interns Page -->
                        <page string="Interns"
                              invisible="is_intern or not intern_ids">
                            <field name="intern_ids"
                                   context="{'default_mentor_id': id,
                                             'default_is_intern': True}">
                                <kanban>
                                    <field name="id"/>
                                    <field name="fullname"/>
                                    <field name="speciality_id"/>
                                    <field name="phone"/>
                                    <field name="email"/>
                                    <field name="experience_years"/>
                                    <field name="rating"/>
                                    <templates>
                                        <t t-name="kanban-box">
                                            <div class="oe_kanban_global_click
                                                        o_kanban_record_has_image_fill">
                                                <div class="o_kanban_image">
                                                    <img t-att-src="kanban_image(
                                                        'hr.hospital.doctor',
                                                        'image_128',
                                                        record.id.raw_value
                                                    )"
                                                         alt="Doctor"
                                                         class="o_image_64_cover"/>
                                                </div>
                                                <div class="oe_kanban_details">
                                                    <div class="o_kanban_record_top">
                                                        <div class="o_kanban_record_headings">
                                                            <strong class="o_kanban_record_title">
                                                                <field name="fullname"/>
                                                            </strong>
                                                            <br/>
                                                            <span class="o_kanban_record_subtitle"
                                                                  t-if="record.is_intern.raw_value">
                                                                <i class="fa fa-graduation-cap"
                                                                   title="Intern"/>
                                                                Intern
                                                            </span>
                                                        </div>
                                                    </div>
                                                    <div class="o_kanban_record_body">
                                                        <field name="phone"
                                                               widget="phone"/>
                                                        <br/>
                                                        <field name="email"
                                                               widget="email"/>
                                                    </div>
                                                    <div class="o_kanban_record_bottom">
                                                        <div class="oe_kanban_bottom_left">
                                                            <span>
                                                                Experience:
                                                                <field name="experience_years"/> years
                                                            </span>
                                                        </div>
                                                        <div class="oe_kanban_bottom_right">
                                                            <span>
                                                                Rating:
                                                                <field name="rating"/> / 5.00
                                                            </span>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </t>
                                    </templates>
                                </kanban>
                            </field>
                        </page>

                        <!-- Schedule -->
                        <page string="Schedule">
                            <field name="schedule_ids"/>
                        </page>

                        <!-- Visits -->
                        <page string="Visits">
                            <field name="visit_ids" readonly="1"/>
                        </page>

                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_hr_hospital_doctor_search" model="ir.ui.view">
        <field name="name">hr.hospital.doctor.search</field>
        <field name="model">hr.hospital.doctor</field>
        <field name="arch" type="xml">
            <search>
                <field name="fullname"
                       string="Full Name"
                       filter_domain="['|', '|',
                           ('last_name', 'ilike', self),
                           ('first_name', 'ilike', self),
                           ('middle_name', 'ilike', self)
                       ]"/>
                <field name="speciality_id"/>
                <field name="phone"/>
                <field name="email"/>
                <field name="license_number"/>

                <separator/>

                <filter string="Mentors"
                        name="filter_mentors"
                        domain="[('is_intern', '=', False),
                                 ('intern_ids', '!=', False)]"/>
                <filter string="Interns"
                        name="filter_interns"
                        domain="[('is_intern', '=', True)]"/>

                <separator/>

                <filter string="Active"
                        name="filter_active"
                        domain="[('active', '=', True)]"/>
                <filter string="Archived"
                        name="filter_archived"
                        domain="[('active', '=', False)]"/>

                <separator/>

                <filter string="High Rating (4+)"
                        name="filter_high_rating"
                        domain="[('rating', '>=', 4.0)]"/>
                <filter string="Experienced (10+ years)"
                        name="filter_experienced"
                        domain="[('experience_years', '>=', 10)]"/>

                <separator/>

                <group expand="0" string="Group By">
                    <filter string="Speciality"
                            name="group_by_speciality"
                            context="{'group_by': 'speciality_id'}"/>
                    <filter string="Education Country"
                            name="group_by_education_country"
                            context="{'group_by': 'education_country_id'}"/>
                    <filter string="Intern Status"
                            name="group_by_intern_status"
                            context="{'group_by': 'is_intern'}"/>
                    <filter string="Mentor"
                            name="group_by_mentor"
                            context="{'group_by': 'mentor_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Kanban View -->
    <record id="view_hr_hospital_doctor_kanban" model="ir.ui.view">
        <field name="name">hr.hospital.doctor.kanban</field>
        <field name="model">hr.hospital.doctor</field>
        <field name="arch" type="xml">
            <kanban default_group_by="speciality_id"
                    class="o_kanban_small_column">
                <field name="id"/>
                <field name="fullname"/>
                <field name="speciality_id"/>
                <field name="phone"/>
                <field name="email"/>
                <field name="is_intern"/>
                <field name="mentor_id"/>
                <field name="experience_years"/>
                <field name="rating"/>
                <field name="active"/>

                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click
                                    o_kanban_record_has_image_fill">

                            <div class="o_kanban_image">
                                <img t-att-src="kanban_image(
                                        'hr.hospital.doctor',
                                        'image_128',
                                        record.id.raw_value
                                     )"
                                     alt="Doctor"
                                     class="o_image_64_cover"/>
                            </div>

                            <div class="oe_kanban_details">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <field name="fullname"/>
                                        </strong>
                                        <br/>
                                        <span class="o_kanban_record_subtitle"
                                              t-if="record.is_intern.raw_value">
                                            <i class="fa fa-graduation-cap"
                                               title="Intern"/>
                                            Intern
                                        </span>
                                    </div>

                                    <div class="o_dropdown_kanban dropdown">
                                        <a class="dropdown-toggle o-no-caret btn"
                                           data-bs-toggle="dropdown"
                                           href="#"
                                           role="button"
                                           aria-label="Dropdown menu"
                                           title="Dropdown menu">
                                            <span class="fa fa-ellipsis-v"/>
                                        </a>
                                        <div class="dropdown-menu" role="menu">
                                            <a role="menuitem"
                                               type="edit"
                                               class="dropdown-item">
                                                Edit
                                            </a>
                                            <a role="menuitem"
                                               type="delete"
                                               class="dropdown-item">
                                                Delete
                                            </a>
                                            <div class="dropdown-divider"/>
                                            <a role="menuitem"
                                               type="object"
                                               name="action_quick_create_visit"
                                               class="dropdown-item">
                                                <i class="fa fa-calendar-plus-o"/>
                                                Quick visit booking
                                            </a>
                                        </div>
                                    </div>
                                </div>

                                <div class="o_kanban_record_body">
                                    <div t-if="record.phone.raw_value">
                                        <i class="fa fa-phone"/>
                                        <field name="phone" widget="phone"/>
                                    </div>
                                    <div t-if="record.email.raw_value">
                                        <i class="fa fa-envelope"/>
                                        <field name="email" widget="email"/>
                                    </div>
                                    <div t-if="record.mentor_id.raw_value"
                                         class="text-muted">
                                        <i class="fa fa-user"/>
                                        Mentor:
                                        <field name="mentor_id"/>
                                    </div>
                                </div>

                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left">
                                        <span title="Work experience">
                                            <i class="fa fa-briefcase"/>
                                            <field name="experience_years"/> yrs
                                        </span>
                                    </div>
                                    <div class="oe_kanban_bottom_right">
                                        <span title="Rating"
                                              class="badge rounded-pill"
                                              t-attf-class="
                                                {{record.rating.raw_value >= 4.5
                                                    ? 'bg-success'
                                                    : record.rating.raw_value >= 3.5
                                                    ? 'bg-info'
                                                    : 'bg-warning'}}">
                                            <i class="fa fa-star"/>
                                            <field name="rating"/>
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Action -->
    <record id="action_hr_hospital_doctor_window" model="ir.actions.act_window">
        <field name="name">Doctors</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hr.hospital.doctor</field>
        <field name="view_mode">kanban,list,form</field>
    </record><record id="server_action_print_disease_report_wizard"
        model="ir.actions.server">
    <field name="name">Disease Report</field>

    <field name="model_id" ref="model_hr_hospital_doctor"/>
    <field name="binding_model_id" ref="model_hr_hospital_doctor"/>
    <field name="binding_type">report</field>
    <field name="binding_view_types">list,form</field>

    <field name="state">code</field>
    <field name="code"><![CDATA[
action = env.ref('hr_hospital.action_disease_report_wizard').read()[0]
ctx = dict(env.context or {})
if ctx.get('active_ids'):
    ctx['default_doctor_ids'] = [(6, 0, ctx['active_ids'])]
action['context'] = ctx
action
    ]]></field>
</record>



</odoo>