<odoo>
  <record id="view_hr_hospital_doctor_list" model="ir.ui.view">
    <field name="name">hr.hospital.doctor.list</field>
    <field name="model">hr.hospital.doctor</field>
    <field name="arch" type="xml">
      <list>
        <field name="name"/>
        <field name="age"/>
        <field name="gender"/>
        <field name="speciality"/>
        <field name="description"/>
        <field name="hospital_id"/>
      </list>
    </field>
  </record>

  <record id="view_hr_hospital_doctor_form" model="ir.ui.view">
    <field name="name">hr.hospital.doctor.form</field>
    <field name="model">hr.hospital.doctor</field>
    <field name="arch" type="xml">
      <form>
        <sheet>
          <group>
            <field name="name"/>
            <field name="age"/>
            <field name="gender"/>
            <field name="speciality"/>
            <field name="description"/>
            <field name="hospital_id"/>
          </group>
        </sheet>
      </form>
    </field>
  </record>

  <record id="action_hr_hospital_doctor_window" model="ir.actions.act_window">
    <field name="name">Doctors</field>
    <field name="type">ir.actions.act_window</field>
    <field name="res_model">hr.hospital.doctor</field>
    <field name="view_mode">list,form</field>
  </record>

  <menuitem id="hr_hospital_menu_doctor"
            action="action_hr_hospital_doctor_window"
            parent="hr_hospital_doctor_menu_catalog"
            name="Doctors" sequence="200"/>
</odoo>
