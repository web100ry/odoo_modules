<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_hr_hospital_doctor_list" model="ir.ui.view">
        <field name="name">hr.hospital.doctor.list</field>
        <field name="model">hr.hospital.doctor</field>
        <field name="arch" type="xml">
            <list string="Doctors">
                <field name="fullname"/>
                <field name="speciality_id"/>
                <field name="is_intern"/>
                <field name="mentor_id"/>
                <field name="license_number"/>
                <field name="license_date"/>
                <field name="experience_years"/>
                <field name="rating"/>
                <field name="education_country_id"/>
                <field name="phone"/>
                <field name="email"/>
            </list>
        </field>
    </record>

    <record id="view_hr_hospital_doctor_form" model="ir.ui.view">
        <field name="name">hr.hospital.doctor.form</field>
        <field name="model">hr.hospital.doctor</field>
        <field name="arch" type="xml">
            <form string="Doctor">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="toggle_active" type="object" class="oe_stat_button" icon="fa-archive">
                            <field name="active" widget="boolean_button" options='{"terminology": "archive"}'/>
                        </button>
                        <button class="oe_stat_button" type="object" name="action_view_interns" icon="fa-users" invisible="is_intern or intern_count == 0">
                            <field name="intern_count" widget="statinfo" string="Інтерни"/>
                        </button>
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="fullname" readonly="1" placeholder="Повне ім'я"/>
                        </h1>
                    </div>
                    <group>
                        <group string="Особиста інформація">
                            <field name="last_name"/>
                            <field name="first_name"/>
                            <field name="middle_name"/>
                            <field name="birth_date"/>
                            <field name="age" readonly="1"/>
                            <field name="gender"/>
                            <field name="phone"/>
                            <field name="email"/>
                            <field name="country_id"/>
                            <field name="lang_id"/>
                        </group>
                        <group string="Професійна інформація">
                            <field name="speciality_id"/>
                            <field name="is_intern"/>
                            <field name="mentor_id" invisible="not is_intern"/>
                            <field name="license_number"/>
                            <field name="license_date"/>
                            <field name="experience_years" readonly="1"/>
                            <field name="rating"/>
                            <field name="education_country_id"/>
                            <field name="hospital_id"/>
                            <field name="user_id"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Опис">
                            <field name="description" placeholder="Додаткова інформація про лікаря..."/>
                        </page>
                        <page string="Ментор" invisible="not is_intern or not mentor_id">
                            <group>
                                <group string="Інформація про ментора">
                                    <field name="mentor_id" readonly="1" invisible="1"/>
                                    <label for="mentor_id" string="Ментор"/>
                                    <div>
                                        <field name="mentor_id" readonly="1" class="oe_inline" options="{'no_create': True, 'no_open': True}"/>
                                    </div>
                                    <label for="mentor_id" string="Спеціальність"/>
                                    <div>
                                        <field name="mentor_id" readonly="1" class="oe_inline" widget="related" options="{'field': 'speciality_id'}"/>
                                    </div>
                                    <label for="mentor_id" string="Досвід"/>
                                    <div>
                                        <field name="mentor_id" readonly="1" class="oe_inline" widget="related" options="{'field': 'experience_years'}"/> років
                                    </div>
                                </group>
                            </group>
                        </page>
                        <page string="Інтерни" invisible="is_intern or not intern_ids">
                            <field name="intern_ids" context="{'default_mentor_id': id, 'default_is_intern': True}">
                                <kanban>
                                    <field name="id"/>
                                    <field name="fullname"/>
                                    <field name="speciality_id"/>
                                    <field name="phone"/>
                                    <field name="email"/>
                                    <field name="experience_years"/>
                                    <field name="rating"/>
                                    <templates>
                                        <t t-name="kanban-box">
                                            <div class="oe_kanban_global_click o_kanban_record_has_image_fill">
                                                <div class="o_kanban_image">
                                                    <img t-att-src="kanban_image('hr.hospital.doctor', 'image_128', record.id.raw_value)" alt="Doctor" class="o_image_64_cover"/>
                                                </div>
                                                <div class="oe_kanban_details">
                                                    <div class="o_kanban_record_top">
                                                        <div class="o_kanban_record_headings">
                                                            <strong class="o_kanban_record_title">
                                                                <field name="fullname"/>
                                                            </strong>
                                                            <br/>
                                                            <span class="o_kanban_record_subtitle">
                                                                <field name="speciality_id"/>
                                                            </span>
                                                        </div>
                                                    </div>
                                                    <div class="o_kanban_record_body">
                                                        <field name="phone" widget="phone"/>
                                                        <br/>
                                                        <field name="email" widget="email"/>
                                                    </div>
                                                    <div class="o_kanban_record_bottom">
                                                        <div class="oe_kanban_bottom_left">
                                                            <span>Досвід: <field name="experience_years"/> років</span>
                                                        </div>
                                                        <div class="oe_kanban_bottom_right">
                                                            <span>Рейтинг: <field name="rating"/> / 5.00</span>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </t>
                                    </templates>
                                </kanban>
                            </field>
                        </page>
                        <page string="Розклад">
                            <field name="schedule_ids"/>
                        </page>
                        <page string="Візити">
                            <field name="visit_ids" readonly="1"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_hr_hospital_doctor_search" model="ir.ui.view">
        <field name="name">hr.hospital.doctor.search</field>
        <field name="model">hr.hospital.doctor</field>
        <field name="arch" type="xml">
            <search>
                <field name="fullname" string="ПІБ" filter_domain="['|', '|', ('last_name', 'ilike', self), ('first_name', 'ilike', self), ('middle_name', 'ilike', self)]"/>
                <field name="speciality_id"/>
                <field name="phone"/>
                <field name="email"/>
                <field name="license_number"/>
                <separator/>
                <filter string="Ментори" name="filter_mentors" domain="[('is_intern', '=', False), ('intern_ids', '!=', False)]"/>
                <filter string="Інтерни" name="filter_interns" domain="[('is_intern', '=', True)]"/>
                <separator/>
                <filter string="Активні" name="filter_active" domain="[('active', '=', True)]"/>
                <filter string="Архівовані" name="filter_archived" domain="[('active', '=', False)]"/>
                <separator/>
                <filter string="З високим рейтингом (4+)" name="filter_high_rating" domain="[('rating', '>=', 4.0)]"/>
                <filter string="Досвідчені (10+ років)" name="filter_experienced" domain="[('experience_years', '>=', 10)]"/>
                <separator/>
                <group expand="0" string="Групування">
                    <filter string="Спеціальність" name="group_by_speciality" context="{'group_by': 'speciality_id'}"/>
                    <filter string="Країна освіти" name="group_by_education_country" context="{'group_by': 'education_country_id'}"/>
                    <filter string="Статус інтерна" name="group_by_intern_status" context="{'group_by': 'is_intern'}"/>
                    <filter string="Ментор" name="group_by_mentor" context="{'group_by': 'mentor_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="view_hr_hospital_doctor_kanban" model="ir.ui.view">
        <field name="name">hr.hospital.doctor.kanban</field>
        <field name="model">hr.hospital.doctor</field>
        <field name="arch" type="xml">
            <kanban default_group_by="speciality_id" class="o_kanban_small_column">
                <field name="id"/>
                <field name="fullname"/>
                <field name="speciality_id"/>
                <field name="phone"/>
                <field name="email"/>
                <field name="is_intern"/>
                <field name="mentor_id"/>
                <field name="experience_years"/>
                <field name="rating"/>
                <field name="active"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click o_kanban_record_has_image_fill">
                            <div class="o_kanban_image">
                                <img t-att-src="kanban_image('hr.hospital.doctor', 'image_128', record.id.raw_value)" alt="Doctor" class="o_image_64_cover"/>
                            </div>
                            <div class="oe_kanban_details">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <field name="fullname"/>
                                        </strong>
                                        <br/>
                                        <span class="o_kanban_record_subtitle" t-if="record.is_intern.raw_value">
                                            <i class="fa fa-graduation-cap" title="Інтерн"/> Інтерн
                                        </span>
                                    </div>
                                    <div class="o_dropdown_kanban dropdown">
                                        <a class="dropdown-toggle o-no-caret btn" data-bs-toggle="dropdown" href="#" role="button" aria-label="Dropdown menu" title="Dropdown menu">
                                            <span class="fa fa-ellipsis-v"/>
                                        </a>
                                        <div class="dropdown-menu" role="menu">
                                            <a role="menuitem" type="edit" class="dropdown-item">Редагувати</a>
                                            <a role="menuitem" type="delete" class="dropdown-item">Видалити</a>
                                            <div class="dropdown-divider"/>
                                            <a role="menuitem" type="object" name="action_quick_create_visit" class="dropdown-item">
                                                <i class="fa fa-calendar-plus-o"/> Швидкий запис на візит
                                            </a>
                                        </div>
                                    </div>
                                </div>
                                <div class="o_kanban_record_body">
                                    <div t-if="record.phone.raw_value">
                                        <i class="fa fa-phone"/> <field name="phone" widget="phone"/>
                                    </div>
                                    <div t-if="record.email.raw_value">
                                        <i class="fa fa-envelope"/> <field name="email" widget="email"/>
                                    </div>
                                    <div t-if="record.mentor_id.raw_value" class="text-muted">
                                        <i class="fa fa-user"/> Ментор: <field name="mentor_id"/>
                                    </div>
                                </div>
                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left">
                                        <span title="Досвід роботи">
                                            <i class="fa fa-briefcase"/> <field name="experience_years"/> р.
                                        </span>
                                    </div>
                                    <div class="oe_kanban_bottom_right">
                                        <span title="Рейтинг" class="badge rounded-pill" t-attf-class="{{record.rating.raw_value >= 4.5 ? 'bg-success' : record.rating.raw_value >= 3.5 ? 'bg-info' : 'bg-warning'}}">
                                            <i class="fa fa-star"/> <field name="rating"/>
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="action_hr_hospital_doctor_window" model="ir.actions.act_window">
        <field name="name">Doctors</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hr.hospital.doctor</field>
        <field name="view_mode">list,form,kanban</field>
    </record>

</odoo>
