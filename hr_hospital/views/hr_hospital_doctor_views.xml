<odoo>
  <record id="view_hr_hospital_doctor_list" model="ir.ui.view">
    <field name="name">hr.hospital.doctor.list</field>
    <field name="model">hr.hospital.doctor</field>
    <field name="arch" type="xml">
      <list>
        <field name="last_name"/>
        <field name="first_name"/>
        <field name="middle_name"/>
        <field name="phone"/>
        <field name="email"/>
        <field name="birth_date"/>
        <field name="age"/>
        <field name="gender"/>
        <field name="speciality"/>
        <field name="description"/>
        <field name="hospital_id"/>
      </list>
    </field>
  </record>

  <record id="view_hr_hospital_doctor_form" model="ir.ui.view">
    <field name="name">hr.hospital.doctor.form</field>
    <field name="model">hr.hospital.doctor</field>
    <field name="arch" type="xml">
      <form>
        <sheet>
          <group>
            <field name="last_name"/>
            <field name="first_name"/>
            <field name="middle_name"/>
            <field name="phone"/>
            <field name="email"/>
            <field name="birth_date"
                                   onchange="1"
                                   context="{'trigger_field': 'birth_date'}"/>
            <field name="age" readonly="1"/>
            <field name="gender"/>
            <field name="speciality"/>
            <field name="description"/>
            <field name="hospital_id"/>
          </group>
        </sheet>
      </form>
    </field>
  </record>

  <record id="action_hr_hospital_doctor_window" model="ir.actions.act_window">
    <field name="name">Doctors</field>
    <field name="type">ir.actions.act_window</field>
    <field name="res_model">hr.hospital.doctor</field>
    <field name="view_mode">list,form</field>
  </record>

</odoo>
