<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Patient Card Export Wizard -->
    <record id="view_patient_card_export_wizard_form" model="ir.ui.view">
        <field name="name">patient.card.export.wizard.form</field>
        <field name="model">patient.card.export.wizard</field>
        <field name="arch" type="xml">
            <form string="Export Patient Medical Card">
                <group>
                    <group>
                        <field name="patient_id"
                               options="{'no_create': True}"/>
                        <field name="date_from"/>
                        <field name="date_to"/>
                    </group>
                    <group>
                        <field name="include_diagnoses"/>
                        <field name="include_recommendations"/>
                        <field name="lang_id" options="{'no_create': True}"/>
                        <field name="export_format"/>
                    </group>
                </group>
                <footer>
                    <button string="Export" name="action_export" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_patient_card_export_wizard" model="ir.actions.act_window">
        <field name="name">Export Medical Card</field>
        <field name="res_model">patient.card.export.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="binding_model_id" ref="model_hr_hospital_patient"/>
        <field name="binding_view_types">form</field>
    </record>

</odoo>
