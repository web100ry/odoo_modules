<odoo>
  <record id="view_hr_hospital_disease_list" model="ir.ui.view">
    <field name="name">hr.hospital.disease.list</field>
    <field name="model">hr.hospital.disease</field>
    <field name="arch" type="xml">
      <list>
        <field name="name"/>
        <field name="parent_id"/>
        <field name="icd10_code"/>
        <field name="danger_level"/>
        <field name="is_contagious"/>
      </list>
    </field>
  </record>

  <record id="view_hr_hospital_disease_form" model="ir.ui.view">
    <field name="name">hr.hospital.disease.form</field>
    <field name="model">hr.hospital.disease</field>
    <field name="arch" type="xml">
      <form>
        <sheet>
          <group>
            <field name="name"/>
            <field name="icd10_code"/>
            <field name="parent_id"/>
            <field name="danger_level"/>
            <field name="is_contagious"/>
          </group>

          <group>
            <field name="symptoms"/>
            <field name="region_ids" widget="many2many_tags"/>
          </group>

          <notebook>
            <page string="Child Diseases">
              <field name="child_ids">
                <list>
                  <field name="name"/>
                  <field name="icd10_code"/>
                  <field name="danger_level"/>
                </list>
              </field>
            </page>
          </notebook>
        </sheet>
      </form>
    </field>
  </record>

   <!-- Search view for Diseases -->
    <record id="view_hr_hospital_disease_search" model="ir.ui.view">
        <field name="name">hr.hospital.disease.search</field>
        <field name="model">hr.hospital.disease</field>
        <field name="arch" type="xml">
            <search string="Diseases">
                <!-- Звичайні поля пошуку -->
                <field name="name"/>
                <field name="icd10_code"/>
                <field name="danger_level"/>

                <filter string="Contagious"
                        name="filter_contagious"
                        domain="[('is_contagious', '=', True)]"/>

                <group expand="0" string="Group By">
                    <filter string="Danger level"
                            name="group_by_danger"
                            context="{'group_by': 'danger_level'}"/>
                </group>

                <!-- Панель пошуку з ієрархією -->
                <searchpanel>
                    <!-- Ієрархічний вибір хвороб за parent_id -->
                    <field name="parent_id"
                           select="multi"
                           hierarchize="1"
                           enable_counters="1"
                           expand="1"
                           limit="50"/>
                    <!-- Додатково: фільтр за регіонами -->
                    <field name="region_ids"
                           select="multi"
                           enable_counters="1"/>
                </searchpanel>
            </search>
        </field>
    </record>

  <record id="action_hr_hospital_disease" model="ir.actions.act_window">
    <field name="name">Diseases</field>
    <field name="type">ir.actions.act_window</field>
    <field name="res_model">hr.hospital.disease</field>
    <field name="view_mode">list,form</field>
  </record>
</odoo>
