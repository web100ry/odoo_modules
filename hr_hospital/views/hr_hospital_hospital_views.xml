
<odoo>
    <record id="hr_hospital_hospital_list" model="ir.ui.view">
        <field name="name">hr.hospital.hospital.list</field>
        <field name="model">hr.hospital.hospital</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="branchid"/>
                <field name="description"/>
                <field name="res_partner_id"/>
                <field name="res_partner_ids" widget="many2many_tags"/>
            </list>
        </field>
    </record>

    <record id="hr_hospital_hospital_form" model="ir.ui.view">
        <field name="name">hr.hospital.hospital.form</field>
        <field name="model">hr.hospital.hospital</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="branchid"/>
                        </group>
                        <group>
                            <field name="res_partner_id"/>
                            <field name="res_partner_ids" widget="many2many_tags"/>
                        </group>
                    </group>
                    <group>
                        <field name="description"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_hr_hospital_hospital_window" model="ir.actions.act_window">
        <field name="name">Hospitals</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hr.hospital.hospital</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>
