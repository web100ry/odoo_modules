<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_vehicle_usage_template">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <div class="page">
                    <h2>Vehicle Usage Report</h2>
                    <table class="table table-sm o_main_table">
                        <thead>
                            <tr>
                                <th>Vehicle</th>
                                <th>Department</th>
                                <th>Start Date</th>
                                <th>End Date</th>
                                <th>Mileage</th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-foreach="docs" t-as="doc">
                                <tr>
                                    <td><span t-field="doc.vehicle_id.name"/></td>
                                    <td><span t-field="doc.vehicle_department_id.name"/></td>
                                    <td><span t-field="doc.start_datetime"/></td>
                                    <td><span t-field="doc.end_datetime"/></td>
                                    <td><span t-field="doc.mileage"/></td>
                                </tr>
                            </t>
                        </tbody>
                    </table>
                </div>
            </t>
        </t>
    </template>
</odoo>