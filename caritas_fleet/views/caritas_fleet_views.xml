<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
    <!-- Fleet Vehicle Views -->
        <record id="fleet_vehicle_view_form_inherit_caritas" model="ir.ui.view">
            <field name="name">fleet.vehicle.view.form.inherit.caritas</field>
            <field name="model">fleet.vehicle</field>
            <field name="inherit_id" ref="fleet.fleet_vehicle_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='driver_id']" position="after">
                    <field name="responsible_driver_id"/>
                    <field name="vehicle_department_id"/>
                    <field name="availability_state"/>
                </xpath>
                <xpath expr="//sheet" position="after">
                    <chatter/>
                </xpath>
            </field>
        </record>

        <record id="fleet_vehicle_view_tree_inherit_caritas" model="ir.ui.view">
            <field name="name">fleet.vehicle.view.tree.inherit.caritas</field>
            <field name="model">fleet.vehicle</field>
            <field name="inherit_id" ref="fleet.fleet_vehicle_view_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='driver_id']" position="after">
                    <field name="responsible_driver_id"/>
                    <field name="vehicle_department_id"/>
                    <field name="availability_state" widget="badge" decoration-success="availability_state == 'available'" decoration-warning="availability_state == 'maintenance'" decoration-danger="availability_state == 'busy'"/>
                </xpath>
            </field>
        </record>

        <!-- Res Users Views -->
        <record id="res_users_view_form_inherit_caritas" model="ir.ui.view">
            <field name="name">res.users.view.form.inherit.caritas</field>
            <field name="model">res.users</field>
            <field name="inherit_id" ref="base.view_users_form"/>
            <field name="arch" type="xml">
                <xpath expr="//notebook" position="inside">
                    <page string="Caritas Fleet" groups="caritas_fleet.group_caritas_fleet_admin">
                        <group>
                            <field name="is_driver"/>
                            <field name="vehicle_department_id"/>
                            <field name="driver_license_number"/>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>

        <!-- Vehicle Department Views -->
        <record id="vehicle_department_view_tree" model="ir.ui.view">
            <field name="name">vehicle.department.view.tree</field>
            <field name="model">vehicle.department</field>
            <field name="arch" type="xml">
                <list>
                    <field name="name"/>
                </list>
            </field>
        </record>

        <record id="vehicle_department_view_form" model="ir.ui.view">
            <field name="name">vehicle.department.view.form</field>
            <field name="model">vehicle.department</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name"/>
                        </group>
                        <notebook>
                            <page string="Members">
                                <field name="member_ids"/>
                            </page>
                            <page string="Vehicles">
                                <field name="vehicle_ids"/>
                            </page>
                        </notebook>
                    </sheet>
                    <chatter/>
                </form>
            </field>
        </record>

        <!-- Vehicle Request Views -->
        <record id="vehicle_request_view_tree" model="ir.ui.view">
            <field name="name">vehicle.request.view.tree</field>
            <field name="model">vehicle.request</field>
            <field name="arch" type="xml">
                <list decoration-info="state == 'draft'" decoration-success="state == 'approved'" decoration-danger="state == 'rejected'">
                    <field name="name"/>
                    <field name="requester_id"/>
                    <field name="request_type"/>
                    <field name="vehicle_id"/>
                    <field name="start_datetime"/>
                    <field name="end_datetime"/>
                    <field name="state" widget="badge" decoration-info="state == 'draft'" decoration-success="state == 'approved'" decoration-danger="state == 'rejected'"/>
                </list>
            </field>
        </record>

        <record id="vehicle_request_view_form" model="ir.ui.view">
            <field name="name">vehicle.request.view.form</field>
            <field name="model">vehicle.request</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="action_approve" type="object" string="Approve" class="oe_highlight" invisible="state != 'draft'" groups="caritas_fleet.group_caritas_fleet_admin"/>
                        <button name="action_reject" type="object" string="Reject" invisible="state != 'draft'" groups="caritas_fleet.group_caritas_fleet_admin"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,approved,rejected"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="requester_id"/>
                                <field name="vehicle_department_id"/>
                                <field name="request_type"/>
                            </group>
                            <group>
                                <field name="vehicle_id"/>
                                <field name="driver_id"/>
                                <field name="start_datetime"/>
                                <field name="end_datetime"/>
                            </group>
                        </group>
                    </sheet>
                    <chatter/>
                </form>
            </field>
        </record>

        <record id="vehicle_request_view_kanban" model="ir.ui.view">
            <field name="name">vehicle.request.view.kanban</field>
            <field name="model">vehicle.request</field>
            <field name="arch" type="xml">
                <kanban default_group_by="state">
                    <field name="state"/>
                    <templates>
                        <t t-name="card">
                            <div class="oe_kanban_global_click">
                                <div class="oe_kanban_details">
                                    <strong class="o_kanban_record_title">
                                        <field name="name"/>
                                    </strong>
                                    <div>
                                        <field name="requester_id"/>
                                    </div>
                                    <div>
                                        <field name="vehicle_id"/>
                                    </div>
                                    <div class="oe_kanban_bottom_right">
                                        <field name="start_datetime" widget="datetime"/>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <!-- Vehicle Trip Views -->
        <record id="vehicle_trip_view_tree" model="ir.ui.view">
            <field name="name">vehicle.trip.view.tree</field>
            <field name="model">vehicle.trip</field>
            <field name="arch" type="xml">
                <list>
                    <field name="request_id"/>
                    <field name="vehicle_id"/>
                    <field name="driver_id"/>
                    <field name="actual_start"/>
                    <field name="actual_end"/>
                </list>
            </field>
        </record>

        <record id="vehicle_trip_view_form" model="ir.ui.view">
            <field name="name">vehicle.trip.view.form</field>
            <field name="model">vehicle.trip</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="request_id"/>
                                <field name="vehicle_id"/>
                                <field name="driver_id"/>
                            </group>
                            <group>
                                <field name="actual_start"/>
                                <field name="actual_end"/>
                                <field name="calendar_event_id"/>
                            </group>
                        </group>
                        <group string="Route">
                            <field name="route" nolabel="1"/>
                        </group>
                    </sheet>
                    <chatter/>
                </form>
            </field>
        </record>

        <record id="fleet_vehicle_view_calendar" model="ir.ui.view">
            <field name="name">fleet.vehicle.view.calendar</field>
            <field name="model">fleet.vehicle</field>
            <field name="arch" type="xml">
                <calendar string="Vehicles" date_start="activity_date_deadline" color="model_id">
                    <field name="model_id"/>
                    <field name="license_plate"/>
                </calendar>
            </field>
        </record>

        <record id="vehicle_request_view_calendar" model="ir.ui.view">
            <field name="name">vehicle.request.view.calendar</field>
            <field name="model">vehicle.request</field>
            <field name="arch" type="xml">
                <calendar string="Requests" date_start="start_datetime" date_stop="end_datetime" color="vehicle_id">
                    <field name="requester_id"/>
                    <field name="vehicle_id"/>
                </calendar>
            </field>
        </record>

        <record id="vehicle_trip_view_calendar" model="ir.ui.view">
            <field name="name">vehicle.trip.view.calendar</field>
            <field name="model">vehicle.trip</field>
            <field name="arch" type="xml">
                <calendar string="Trips" date_start="actual_start" date_stop="actual_end" color="vehicle_id">
                    <field name="vehicle_id"/>
                    <field name="driver_id"/>
                </calendar>
            </field>
        </record>

        <!-- Actions -->
        <record id="fleet_vehicle_action_caritas" model="ir.actions.act_window">
            <field name="name">Vehicles</field>
            <field name="res_model">fleet.vehicle</field>
            <field name="view_mode">list,form,calendar</field>
        </record>

        <record id="vehicle_request_action" model="ir.actions.act_window">
            <field name="name">Requests</field>
            <field name="res_model">vehicle.request</field>
            <field name="view_mode">list,kanban,form,calendar</field>
        </record>

        <record id="vehicle_trip_action" model="ir.actions.act_window">
            <field name="name">Trips</field>
            <field name="res_model">vehicle.trip</field>
            <field name="view_mode">list,form,calendar</field>
        </record>

        <record id="vehicle_department_action" model="ir.actions.act_window">
            <field name="name">Departments</field>
            <field name="res_model">vehicle.department</field>
            <field name="view_mode">list,form</field>
        </record>

        <!-- Signal Config Views -->
        <record id="signal_config_view_tree" model="ir.ui.view">
            <field name="name">signal.config.view.tree</field>
            <field name="model">signal.config</field>
            <field name="arch" type="xml">
                <list>
                    <field name="api_token"/>
                    <field name="is_active"/>
                    <field name="last_sync"/>
                </list>
            </field>
        </record>

        <record id="signal_config_view_form" model="ir.ui.view">
            <field name="name">signal.config.view.form</field>
            <field name="model">signal.config</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="api_token"/>
                            <field name="is_active"/>
                            <field name="last_sync"/>
                        </group>
                        <group string="Log">
                            <field name="message_log" nolabel="1"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Vehicle Usage Log Views -->
        <record id="vehicle_usage_log_view_tree" model="ir.ui.view">
            <field name="name">vehicle.usage.log.view.tree</field>
            <field name="model">vehicle.usage.log</field>
            <field name="arch" type="xml">
                <list>
                    <field name="vehicle_id"/>
                    <field name="trip_id"/>
                    <field name="start_datetime"/>
                    <field name="end_datetime"/>
                    <field name="mileage" sum="Total Mileage"/>
                </list>
            </field>
        </record>

        <record id="vehicle_usage_log_view_pivot" model="ir.ui.view">
            <field name="name">vehicle.usage.log.view.pivot</field>
            <field name="model">vehicle.usage.log</field>
            <field name="arch" type="xml">
                <pivot string="Usage Analysis">
                    <field name="vehicle_department_id" type="row"/>
                    <field name="start_datetime" interval="month" type="col"/>
                    <field name="mileage" type="measure"/>
                </pivot>
            </field>
        </record>

        <!-- Actions -->
        <record id="signal_config_action" model="ir.actions.act_window">
            <field name="name">Signal Settings</field>
            <field name="res_model">signal.config</field>
            <field name="view_mode">list,form</field>
        </record>

        <record id="vehicle_usage_log_action" model="ir.actions.act_window">
            <field name="name">Usage Logs</field>
            <field name="res_model">vehicle.usage.log</field>
            <field name="view_mode">list,pivot</field>
        </record>

        <!-- Search Views -->
        <record id="vehicle_request_view_search" model="ir.ui.view">
            <field name="name">vehicle.request.view.search</field>
            <field name="model">vehicle.request</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <field name="requester_id"/>
                    <field name="vehicle_id"/>
                    <field name="driver_id"/>
                    <filter name="draft" string="Draft" domain="[('state', '=', 'draft')]"/>
                    <filter name="approved" string="Approved" domain="[('state', '=', 'approved')]"/>
                    <group expand="0" string="Group By">
                        <filter string="Department" name="group_by_department" context="{'group_by': 'vehicle_department_id'}"/>
                        <filter string="Requester" name="group_by_requester" context="{'group_by': 'requester_id'}"/>
                        <filter string="Vehicle" name="group_by_vehicle" context="{'group_by': 'vehicle_id'}"/>
                        <filter string="State" name="group_by_state" context="{'group_by': 'state'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="vehicle_trip_view_search" model="ir.ui.view">
            <field name="name">vehicle.trip.view.search</field>
            <field name="model">vehicle.trip</field>
            <field name="arch" type="xml">
                <search>
                    <field name="request_id"/>
                    <field name="vehicle_id"/>
                    <field name="driver_id"/>
                    <group expand="0" string="Group By">
                        <filter string="Vehicle" name="group_by_vehicle" context="{'group_by': 'vehicle_id'}"/>
                        <filter string="Driver" name="group_by_driver" context="{'group_by': 'driver_id'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Menus -->
        <menuitem id="menu_caritas_fleet_root" 
                  name="Caritas Fleet" 
                  web_icon="caritas_fleet,static/description/icon.png"
                  sequence="10"/>

        <menuitem id="menu_caritas_fleet_vehicles" 
                  name="Vehicles" 
                  parent="menu_caritas_fleet_root" 
                  action="fleet_vehicle_action_caritas" 
                  sequence="10"/>

        <menuitem id="menu_caritas_fleet_requests" 
                  name="Requests" 
                  parent="menu_caritas_fleet_root" 
                  action="vehicle_request_action" 
                  sequence="20"/>

        <menuitem id="menu_caritas_fleet_trips" 
                  name="Trips" 
                  parent="menu_caritas_fleet_root" 
                  action="vehicle_trip_action" 
                  sequence="30"/>

        <menuitem id="menu_caritas_fleet_usage_log" 
                  name="Usage Logs" 
                  parent="menu_caritas_fleet_root" 
                  action="vehicle_usage_log_action" 
                  sequence="40"/>

        <menuitem id="menu_caritas_fleet_configuration" 
                  name="Configuration" 
                  parent="menu_caritas_fleet_root" 
                  sequence="100"
                  groups="caritas_fleet.group_caritas_fleet_admin"/>

        <menuitem id="menu_caritas_fleet_department" 
                  name="Departments" 
                  parent="menu_caritas_fleet_configuration" 
                  action="vehicle_department_action" 
                  sequence="10"/>

        <menuitem id="menu_caritas_fleet_signal_config" 
                  name="Signal Settings" 
                  parent="menu_caritas_fleet_configuration" 
                  action="signal_config_action" 
                  sequence="20"/>

        <!-- Wizard Views -->
        <record id="vehicle_request_wizard_view_form" model="ir.ui.view">
            <field name="name">vehicle.request.wizard.view.form</field>
            <field name="model">vehicle.request.wizard</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <group>
                            <field name="requester_id"/>
                            <field name="request_type"/>
                        </group>
                        <group>
                            <field name="vehicle_id"/>
                            <field name="driver_id"/>
                        </group>
                    </group>
                    <group>
                        <field name="start_datetime"/>
                        <field name="end_datetime"/>
                    </group>
                    <footer>
                        <button name="action_create_request" string="Create Request" type="object" class="btn-primary"/>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="vehicle_request_wizard_action" model="ir.actions.act_window">
            <field name="name">New Request Wizard</field>
            <field name="res_model">vehicle.request.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <record id="vehicle_mass_approve_wizard_view_form" model="ir.ui.view">
            <field name="name">vehicle.mass.approve.wizard.view.form</field>
            <field name="model">vehicle.mass.approve.wizard</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <field name="request_ids" widget="many2many_tags"/>
                    </group>
                    <footer>
                        <button name="action_mass_approve" string="Mass Approve" type="object" class="btn-primary"/>
                        <button name="action_mass_reject" string="Mass Reject" type="object" class="btn-warning"/>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="vehicle_mass_approve_wizard_action" model="ir.actions.act_window">
            <field name="name">Mass Approval</field>
            <field name="res_model">vehicle.mass.approve.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="groups_id" eval="[(4, ref('caritas_fleet.group_caritas_fleet_admin'))]"/>
        </record>

        <menuitem id="menu_caritas_fleet_mass_approve" 
                  name="Mass Approval" 
                  parent="menu_caritas_fleet_configuration" 
                  action="vehicle_mass_approve_wizard_action" 
                  sequence="30"/>
    </data>
</odoo>
