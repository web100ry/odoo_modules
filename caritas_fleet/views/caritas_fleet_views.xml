<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="caritas_fleet_vehicle_view_form" model="ir.ui.view">
            <field name="name">caritas.fleet.vehicle.view.form</field>
            <field name="model">caritas.fleet.vehicle</field>
            <field name="inherit_id" ref="fleet.fleet_vehicle_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='license_plate']" position="after">
                    <field name="caritas_id"/>
                </xpath>
            </field>
        </record>

        <record id="caritas_fleet_vehicle_action" model="ir.actions.act_window">
            <field name="name">Caritas Vehicles</field>
            <field name="res_model">caritas.fleet.vehicle</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="menu_caritas_fleet_root" name="Caritas Fleet" sequence="10"/>
        <menuitem id="menu_caritas_fleet_vehicles" name="Vehicles" parent="menu_caritas_fleet_root" action="caritas_fleet_vehicle_action" sequence="10"/>
    </data>
</odoo>
