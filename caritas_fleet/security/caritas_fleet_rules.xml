<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Record Rules -->
        <record id="rule_vehicle_request_department" model="ir.rule">
            <field name="name">Vehicle Request: Department Only</field>
            <field name="model_id" ref="model_vehicle_request"/>
            <field name="domain_force">[('vehicle_department_id', '=', user.vehicle_department_id.id)]</field>
            <field name="groups" eval="[(4, ref('caritas_fleet.group_caritas_fleet_user'))]"/>
        </record>

        <record id="rule_vehicle_request_admin" model="ir.rule">
            <field name="name">Vehicle Request: Admin All</field>
            <field name="model_id" ref="model_vehicle_request"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('caritas_fleet.group_caritas_fleet_admin'))]"/>
        </record>
    </data>
</odoo>