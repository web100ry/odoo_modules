<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="department_hq" model="vehicle.department">
            <field name="name">Headquarters</field>
        </record>

        <record id="department_it" model="vehicle.department">
            <field name="name">IT Department</field>
        </record>

        <record id="department_logistics" model="vehicle.department">
            <field name="name">Logistics</field>
        </record>

        <!-- Vehicles -->
        <record id="vehicle_1" model="fleet.vehicle">
            <field name="model_id" ref="fleet.model_golf_8"/>
            <field name="license_plate">AA1111BB</field>
            <field name="vehicle_department_id" ref="department_hq"/>
            <field name="availability_state">available</field>
        </record>

        <record id="vehicle_2" model="fleet.vehicle">
            <field name="model_id" ref="fleet.model_golf_8"/>
            <field name="license_plate">AA2222BB</field>
            <field name="vehicle_department_id" ref="department_it"/>
            <field name="availability_state">busy</field>
        </record>

        <record id="vehicle_3" model="fleet.vehicle">
            <field name="model_id" ref="fleet.model_golf_8"/>
            <field name="license_plate">AA3333BB</field>
            <field name="vehicle_department_id" ref="department_logistics"/>
            <field name="availability_state">maintenance</field>
        </record>

        <!-- Vehicle Requests -->
        <record id="request_1" model="vehicle.request">
            <field name="requester_id" ref="base.user_admin"/>
            <field name="request_type">with_driver</field>
            <field name="vehicle_id" ref="vehicle_1"/>
            <field name="start_datetime" eval="(datetime.now() + relativedelta(days=1)).strftime('%Y-%m-%d %H:%M:%S')"/>
            <field name="end_datetime" eval="(datetime.now() + relativedelta(days=1, hours=2)).strftime('%Y-%m-%d %H:%M:%S')"/>
            <field name="state">approved</field>
        </record>

        <record id="request_2" model="vehicle.request">
            <field name="requester_id" ref="base.user_admin"/>
            <field name="request_type">self_drive</field>
            <field name="vehicle_id" ref="vehicle_2"/>
            <field name="start_datetime" eval="(datetime.now() + relativedelta(days=2)).strftime('%Y-%m-%d %H:%M:%S')"/>
            <field name="end_datetime" eval="(datetime.now() + relativedelta(days=2, hours=4)).strftime('%Y-%m-%d %H:%M:%S')"/>
            <field name="state">draft</field>
        </record>

        <record id="request_3" model="vehicle.request">
            <field name="requester_id" ref="base.user_admin"/>
            <field name="request_type">with_driver</field>
            <field name="vehicle_id" ref="vehicle_3"/>
            <field name="start_datetime" eval="(datetime.now() - relativedelta(days=1)).strftime('%Y-%m-%d %H:%M:%S')"/>
            <field name="end_datetime" eval="(datetime.now() - relativedelta(days=1, hours=2)).strftime('%Y-%m-%d %H:%M:%S')"/>
            <field name="state">rejected</field>
        </record>

        <!-- Trips -->
        <record id="trip_1" model="vehicle.trip">
            <field name="request_id" ref="request_1"/>
            <field name="route">Kyiv - Lviv</field>
            <field name="actual_start" eval="(datetime.now() + relativedelta(days=1)).strftime('%Y-%m-%d %H:%M:%S')"/>
        </record>
    </data>
</odoo>
